<h1>Listing news</h1>

<table>
  <tr>
    <th>Headline</th>
    <th>Bodycontent</th>
    <th>Postdate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= news.headline %></td>
    <td><%= news.bodycontent %></td>
    <td><%= news.postdate %></td>
    <td><%= link_to 'Show', news %></td>
    <td><%= link_to 'Edit', edit_news_path(news) %></td>
    <td><%= link_to 'Destroy', news, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

