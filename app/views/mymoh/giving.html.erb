<div id="wrapper">
	<%= render 'layouts/navBar'%>

	<div id="content" style="padding-top:50px;">

		<h1>My MOH</h1>
		<%= render 'layouts/mymohNav'%>
		<h2><span class="eyebrow">Mission of Hope</span>
		<br />
		My Giving</h2>

		<p>
			View your giving history, recurring gifts and scheduled givings.
		</p>
		<table class="mygiving" width="100%" border="0">
			<tr>
				<th colspan="3" class="label"><h2>Your Account Summary</h2></th>
			</tr>
			<tr>
				<th colspan="3" class="label"><h3>Account Details</h3></th>
			</tr>
			<tr>
				<td><span class="label">Account</span><span class="data"><%= @account.Account__c %></span></td>
				<td><span class="label">Lifetime Donations</span>$<%= @account.cv__summary_lifetime_gift_amount__c.to_int || 0 %></span></td>
				<td><span class="label">Address</span><span class="data"><%= @account.MailingStreet %></span></td>
			</tr>
			<tr>
				<td><span class="label">Name</span><span class="data"><%= @account.Name %></span></td>
				<td><span class="label">Lifetime Gifts</span><span class="data"><%= @account.cv__summary_lifetime_gift_count__c.to_int || 0 %></span></td>
				<td><span class="label">Address 2</span><span class="data">?</span></td>
			</tr>
			<tr>
				<td><span class="label">Most Recent Donation</span><span class="data">$<%= @account.cv__Last_Gift_Amount__c.to_int || 0 %></span></td>
				<td><span class="label">Last Year's Donations</span><span class="data">$<%= @account.cv__summary_last_year_gift_amount__c.to_int || 0 %></span></td>
				<td><span class="label">City, State, Zip</span><span class="data"><%= @account.MailingCity %>, <%= @account.MailingState%></span></td>
			</tr>
			<tr>
				<td><span class="label">This Year's Donations</span><span class="data">$<%= @account.cv__summary_ytd_gift_amount__c.to_int || 0 %></span></td>
				<td><span class="label">Last Year's Number of Gifts</span><span class="data"><%= @account.cv__summary_last_year_gift_count__c.to_int || 0 %></span></td>
				<td><span class="label">Phone</span><span class="data"><%= @account.HomePhone %></span></td>
			</tr>
			<tr>
				<td><span class="label">This Year's Number of Gifts</span><span class="data"><%= @account.cv__summary_ytd_gift_count__c.to_int || 0 %></span></td>
				<td><span class="label">&nbsp;</span></td>
				<td><span class="label">Email</span><span class="data"><%= @account.Email %></span></td>
			</tr>
		</table>

		<% unless @recurring == nil %>
		<table class="mygiving" width="100%" border="0">
			<tr>
				<th colspan="7"><h2>Your Recurring Gifts</h2></th>
			</tr>
			<tr>
				<th><h3>Description</h3></th>
				<th><h3>Recurring Amount</h3></th>
				<th><h3>Last Gift Amount</h3></th>
				<th><h3>Last Gift Date</h3></th>
				<th><h3>Ahead/Behind</h3></th>
				<th><h3>Next Gift Date</h3></th>
				<th><h3>Gift Amount Needed</h3></th>
			</tr>
			<tr>
				<td><%= @recurring.Pledge_Description__c %></td>
				<td>$<%= @recurring.cv__Recurring_Amount__c.to_int %></td>
				<td>?</td>
				<td>?</td>
				<td>?</td>
				<td><%= @recurring.cv__Next_Payment_Date__c%></td>
				<td>?</td>
			</tr>
			<tr>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
			</tr>
			<tr>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
			</tr>
		</table>
		<div class="buttonWrapper" style="width:660px; margin:auto;">
			<div class="buttonSquareOrange" style="width:280px; float:left; margin-right:50px;">
				<a href="/">Gift Now</a>
			</div>
			<div class="buttonSquareOrange" style="width:280px; float:left;">
				<a href="/">Schedule Giving</a>
			</div>
			<div class="clearfix" style="height:80px;"></div>
		</div>
		<% end %>
		<table class="mygiving" width="100%" border="0">
			<tr>
				<th colspan="5"><h2>Your Giving History</h2></th>
			</tr>
			<tr>
				<th valign="top"><h3>Date</h3></th>
				<th valign="top"><h3>Type</h3></th>
				<th valign="top"><h3>Designation</h3></th>
				<th valign="top"><h3>Description</h3></th>
				<th valign="top"><h3>Amount</h3></th>
			</tr>
			<tr>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
			</tr>
			<tr>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
				<td>&nbsp;</td>
			</tr>
		</table>
		<div class="clearfix" style="height:40px;">
			<!--x-->
		</div>
	</div>
