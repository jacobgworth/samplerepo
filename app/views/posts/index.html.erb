<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>User</th>
    <th>Body</th>
    <th>Imagelink</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.user_id %></td>
    <td><%= post.body %></td>
    <td><%= post.imagelink %></td>
    <% if !@user.nil? && @user.is_admin == 1%>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
    <%else%>
    <td></td>
    <td></td>
    <td></td>
    <%end%>
  </tr>
<% end %>
</table>

<br />
<% if !@user.nil? && @user.is_admin == 1%>
<%= link_to 'Write a New Post', new_post_path %>
<%end%>
