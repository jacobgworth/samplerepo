<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.number_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div>
  	Select Categories: <%= collection_select 'post', 'category_ids', Category.order("categoryname asc"), :id, :categoryname, { :include_blank => 'None'}, { :multiple => true, :categoryname =>'post[category_ids][]',:selected => 0 } %>
  </div>
  <div>
  	Select Related Projects: <%= collection_select 'post', 'project_ids', Project.order("projectname asc"), :id, :projectname, { :include_blank => 'None'}, { :multiple => true, :projectname =>'post[project_ids][]',:selected => 0 } %>
  </div>
  <div class="field">
    <%= f.label :imagelink %><br />
    <%= f.text_field :imagelink %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
