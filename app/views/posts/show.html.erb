<div id="wrapper">
	<%= render 'layouts/navBar'%>
	<div id="content" style="padding-top: 30px;">
		<div id="contentLeft560">
			<p id="notice">
				<%= notice %>
			</p>
			<div class="updateDate" style="margin-top:30px;">
				<span class="month"><%= @post.postdate.strftime("%b")%></span>
				<br />
				<span class="date"><%= @post.postdate.strftime("%d")%></span>
				<br />
				<span class="year"><%= @post.postdate.strftime("%Y")%></span>
			</div>
			<h2><span class="eyebrow">Mission of Hope Haiti Blog Post</span>
			<br />
			<%= @post.title %></h2>
			<p class="meta" >
    		<%if !@post.author.nil? && @post.author != ''%>
    			By <%= @post.author %> |
    		<%end%>
    		<%if @post.categories.count > 0%>
    			Categories: 
    			<%@post.categories.each do |cat|%>
    				<a href="/blog/?cid=<%=cat.id%>"><%=cat.categoryname%></a>
    			<%end%>
    		<%end%>
    	</p>
			<!-- AddThis Button BEGIN -->
					<div class="addthis_toolbox addthis_default_style ">
						<a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
						<a class="addthis_button_tweet"></a>
						<a class="addthis_counter addthis_pill_style"></a>
					</div>
					<script type="text/javascript">
						var addthis_config = {
							"data_track_addressbar" : true
						};
					</script>
					<script type="text/javascript" src="http://s7.addthis.com/js/300/addthis_widget.js#pubid=ra-506b79724d720237"></script>
					<!-- AddThis Button END -->
			<!--<h4><%= @post.user_id %></h4>-->
			<div class="blogPost">

				<p style="clear:both;">
					<%= @post.body.html_safe %>
				</p>

				<p>
					<%= @post.imagelink %>
				</p>

				<% if @isadmin %>
					<!--<%= link_to 'Edit', edit_post_path(@post) %> |-->
					<a href="/blog/<%=@post.id%>/edit">Edit</a>
				<% end %> | 
				<!--<%= link_to 'Back', posts_path %>-->
				<a href="/blog">Back</a>
			<!-- AddThis Button BEGIN -->
					<div class="addthis_toolbox addthis_default_style ">
						<a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
						<a class="addthis_button_tweet"></a>
						<a class="addthis_counter addthis_pill_style"></a>
					</div>
					<script type="text/javascript">
						var addthis_config = {
							"data_track_addressbar" : true
						};
					</script>
					<script type="text/javascript" src="http://s7.addthis.com/js/300/addthis_widget.js#pubid=ra-506b79724d720237"></script>
					<!-- AddThis Button END -->
					
					<div id="disqus_thread"></div>
				        <script type="text/javascript">
				            /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
				            var disqus_shortname = 'threetwelvecreative'; // required: replace example with your forum shortname
				
				            /* * * DON'T EDIT BELOW THIS LINE * * */
				            (function() {
				                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
				                dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
				                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
				            })();
				        </script>
				        <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
				        <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
			</div>
		</div><!-- End content Left	 -->
		<div id="contentRight300">
			<%= render('/layouts/archives')%>
		</div><!-- End Content Right -->
		<div class="clearfix" style="height:40px;"></div>
	</div><!-- End content -->
	<div class="clearfix" style="height:40px;"></div>
</div><!-- End wrapper -->
