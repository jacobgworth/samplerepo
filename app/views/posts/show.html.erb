<div id="wrapper">
	<%=render 'layouts/navBar'%>
<div id="content" style="padding-top: 30px;">
	<div id="contentLeft560">
		<p id="notice"><%= notice %></p>
	<div class="updateDate" style="margin-top:30px;">
	<span class="month"><%= @post.postdate.strftime("%b")%></span><br />
			<span class="date"><%= @post.postdate.strftime("%d")%></span><br />
			<span class="year"><%= @post.postdate.strftime("%Y")%></span>	
	</div>
			<h2><span class="eyebrow">Mission of Hope Haiti Blog Post</span><br /><%= @post.title %></h2>
		
		<h4><%= @post.user_id %></h4>
		<div class="blogPost">
		<p style="clear:both;"><%= @post.body.html_safe %></p>
		
		<p><%= @post.imagelink %></p>
		
		<% if @isadmin %>
		<%= link_to 'Edit', edit_post_path(@post) %> |
		<% end %>
		<%= link_to 'Back', posts_path %>
		</div>
	</div><!-- End content Left	 -->
	<div id="contentRight300">
		<% unless @categories.nil? %>
		<div class="rightBoxGreen">
			See More...
			<% @categories.each do |cat|%>
			<h2><a href="/posts/?cid=<%=cat.id%>"><%=cat.categoryname%> Posts</a></h2>
			<%end%>
			
		</div>
		<%end%>
	</div><!-- End Content Right -->
	<div class="clearfix" style="height:40px;"></div>
</div><!-- End content -->
<div class="clearfix" style="height:40px;"></div>
</div><!-- End wrapper -->
