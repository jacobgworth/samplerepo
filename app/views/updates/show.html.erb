<div id="wrapper">
	<%=render 'layouts/navBar'%>
<div id="content" style="padding-top: 20px;">
<p id="notice"><%= notice %></p>
<h1><span class="eyebrow">Mission of Hope Haiti</span><br />Update</h1>
<h3>
  <%= @update.title %>
</h3>
<%unless @update.author.nil? || @update.author.blank?%>
<p>Update from <%=@update.author%></p>
<%end%>
<%unless @photo.nil?%>
<p><img src="<%=@photo.asset.url(:medium)%>" /></p>
<%end%>
<p>
  <%= @update.body %>
</p>
<% unless @update.categories.count == 0%>
	<h3 style="width:295px;" class="projectDetailButton"><strong>Related to: </strong>
		<a href="/updates/?cid=<%=@cat.first.id%>"><%= @cat.first.categoryname %></a>
		<% unless @cat2.nil? %>
			<% @cat2.each do |cat2|%>
			, <a href="/updates/?cid=<%=cat2.id%>"><%= cat2.categoryname%></a>
			<% end%>
		<%end%>
	</h3>
<% end %>

<% if @related_result %>
	<% if @related_result.length > 1 %>
		<h3 style="width:295px;" class="projectDetailButton"><strong>Similar updates: </strong>
		<% @related_result.each do |related|%>
				<%if related.id != @update.id %>
					<a href="/updates/<%=related.id%>"><%=related.title%></a><br>
				<%end%>
		<% end%>
		</h3>
	<% end %>
<%end%>

<% if @related_posts %>
<% if @related_posts.length > 0 %>
	<h3 style="width:295px;" class="projectDetailButton"><strong>Related Blog Posts: </strong>
	<% @related_posts.each do |related|%>
		<a href="/blog/<%=related.id%>"><%=related.title%></a><br>
	<% end%>
	</h3>
<% end %>
<% end%>

<% if @related_projects %>
<% if @related_projects.length > 0 %>
	<h3 style="width:295px;" class="projectDetailButton"><strong>Related Projects: </strong>
	<% @related_projects.each do |related|%>
		<a href="/projects/<%=related.id%>"><%=related.projectname%></a><br>
	<% end%>
	</h3>
<% end %>
<% end%>

<p>
  <%= @update.media %>
</p>

<%if @isadmin%>
<%= link_to 'Edit', edit_update_path(@update) %> |
<%end%>
<%= link_to 'Back', updates_path %>
</div></div>
