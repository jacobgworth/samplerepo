<p><img src="<%=@photo.asset.url(:large)%>" class="updatesBorder" /></p>
<%end%>
<p>
  <%= @update.body %>
</p>
<%if @isadmin%>
<%= link_to 'Edit', edit_update_path(@update) %> |
<%end%>
<%= link_to 'Back', updates_path %>
