<div id="wrapper">
	<%=render 'layouts/navBar'%>
<div id="content" style="padding-top: 20px;">
<% if @cid.nil?%>
<h1><span class="eyebrow">Mission of Hope Haiti</span><br />Updates</h1>
<% else %>
	<h1><%=@category.categoryname %> Updates</h1>
<% end %>

<% @updates.each do |update| %>
  <div style="padding-top:20px; border-bottom:1px dotted #0F483B;">
  <h3><%= update.postdate.strftime("%b %e, %Y") %> - <a href="/updates/<%=update.id%>"><%= update.title %></a></h3>
    <% if !update.author.blank? && !update.author.nil?%>
    	<p>Update from: <%=update.author%></p>
    <%end%>
    <p><%= update.body %></p>
    <p><%= update.media %></p>
    <!--<td><%= link_to 'Show', update %></td>
    <td><%= link_to 'Edit', edit_update_path(update) %></td>
    <td><%= link_to 'Destroy', update, confirm: 'Are you sure?', method: :delete %></td>-->
    <p>
    <% unless update.categories.count == 0%>
		<h3 style="width:295px;" class="projectDetailButton"><strong>Related to: </strong>
			<% @cat=update.categories.order("categoryname asc").limit(1) 
				@cat2=update.categories.order("categoryname asc").offset(1) %>
			<a href="/updates/?cid=<%=@cat.first.id%>"><%= @cat.first.categoryname %></a><% unless @cat2.nil? %><% @cat2.each do |cat2|%>, <a href="/updates/?cid=<%=cat2.id%>"><%= cat2.categoryname%></a><% end%><%end%>
		</h3>
	<% end %>
	</p>
	<% if !@user.nil? && @user.is_admin?%>
  	<%= link_to 'Edit', edit_update_path(update) %> | <%= link_to 'Delete', update, confirm: 'Are you sure?', method: :delete %>
  <% end %>
  </div>
<% end %>

<br />

<%if @isadmin%>
<%= link_to 'New Update', new_update_path %>
<%end%>
</div>