						<ul class="ad-thumb-list">
							<% if @assets.count > 0 
								@counter = 0
								@assets.each do |photo| 
									@classname = "image" + @counter.to_s
							%>
									<!--<p><%= image_tag photo.asset.url(:medium) %></p>-->
									<li >
										<a href="<%= photo.asset.url(:medium)%>"><img src="<%= photo.asset.url(:thumb) %>" alt="" title="" longdesc="" class="<%= @classname%>" /></a>
									</li>
									<% @counter = @counter + 1%>
								<% end %>
							<% end %>
						</ul>
			</div>
