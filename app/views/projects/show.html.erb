<div id="bgHero">
	<div id="advancementHeroImg">
		<!--x-->
	</div>
</div>

<div id="wrapper">
	<%=render 'layouts/navBar'%>
	<div id="content">
		<div id="heroContent">
			<div id="heroLeft">
				<h1 style="padding-top:40px; width:500px"><span class="largeText4 greenTransBG" style="margin-bottom:15px;"><%= @project.projectname %>
					<br />
				</span><span class="largeText6 greenTransBG lowercase"><%= @project.goal%></span></h1>
				
				<div class="buttonSquareOrange" style="position:absolute; top:-250px; left:200px; width:280px">
					<a href="">Support this project &raquo;</a>
				</div>
			</div>
			<!--<div class="percentComplete">
				<h2>Percent Complete
				<br/>
				<span class="largeText1" style="line-height: 1em;"><%= number_to_percentage(@project.percentcomplete,:precision=>2)%></span></h2>
			</div>-->
		</div>

<div class="contentHeader">
			<div class="contentHeaderLeft">
				<h1><span class="eyebrow">Mission of Hope Haiti Project</span>
				<br />
				<%= @project.projectname %></h1>
				<p>
					<%= simple_format(@project.description) %>
				</p>
			</div>
			<div class="contentHeaderRight">
				<h3 class="projectDetailButton" style="padding-top:20px; background-image: url('/assets/gr-<%=@category.categoryicon%>'); background-repeat:no-repeat; background-position:95% 50%; height:60px;">Project Type
				<br />
				<span class="darkGreenLarge"><a href=""><%= @category.categoryname%></span></a></h3>
				<h3 class="projectDetailButtonLeft">Population Served
				<br />
				<span class="darkGreenMedium"><%=@population%></span></h3>
				<h3 class="projectDetailButtonRight">Project Stage
				<br />
				<span class="darkGreenMedium"><%= @project.stage%></span></h3>
				<div class="clear"></div>
				<%unless @project.fundsneeded.nil? || @project.fundsneeded == ''%>
				<div class="fundsRaised">
					<h3 class="darkGreen">Funds Raised of <%= number_to_currency(@project.fundsneeded, :unit => "$") %> Needed</h3>	
					<a href=""><img src="/assets/<%=@fundPercentImage%>"></a>
					<div class="dollarBubble">
						<span class="darkGreen"><%= number_to_currency(@project.fundsraised, :unit => "$") %><br />RAISED </span>
					</div>
				</div>
				<%end%>
			</div>
			<div class="clearfix">
				<!--x-->
			</div>
		</div>
			<div id="contentLeft560">

			<div class="updatesWrapper">
				<h3><span class="eyebrow"><%= @project.projectname %></span>
				<br />
				Updates</h3>
				<div class="speechBubble">
					<p>
						latest
						<br />
						updates
					</p>
				</div>
				<% if @updates.count == 0 %>
					<div class="update560">No updates for <%= @project.projectname %></div>
				<% else %>
				<%@updates.each do |m|%>
				<div class="update560">
					<div class="updateDate">
						<%
						 created = m.created_at
						              creator = "-"
						              if m.user.blank?
						                creator = '-'
						              else
						                creator = m.user.first
						              end
						%>
						<span class="month"><%= created.strftime("%b")%></span>
						<br />
						<span class="date"><%= created.strftime("%d")%></span>
						<br />
						<span class="year"><%= created.strftime("%Y")%></span>
					</div>
					<div class="updatePost560">
						<h4><a href=""><%= m.title%></a></h4>
						<p>
							<%= truncate(m.body,:length=>100,:separator=>' ')%> <a href="/updates/<%= m.id%>">READ MORE</a>
						</p>
						<p class="meta">
							Projects: <%= @project.projectname %> | Posted by: <%= creator%>
						</p>
					</div>
					<div class="clearfix"></div>
				</div>
				<%end%>
				
				<div class="updateNavRight">
					<a href="/updates/">View All Updates &raquo;</a>
				</div>
				<% end %>
			</div>
			<!--start posts-->
			<div class="updatesWrapper">
				<h3><span class="eyebrow"><%= @project.projectname %></span>
				<br />
				Posts</h3>
				<div class="speechBubble">
					<p>
						latest
						<br />
						posts
					</p>
				</div>
				<% if @posts.count == 0 %>
					<div class="update560">No posts for <%= @project.projectname %></div>
				<%else%>
				<%@posts.each do |m|%>
				<div class="update560">
					<div class="updateDate">
						<%
						 created = m.postdate
						              creator = "-"
						              if m.user.blank?
						                creator = '-'
						              else
						                creator = m.user.first
						              end
						%>
						<span class="month"><%= created.strftime("%b") unless created.nil? %></span>
						<br />
						<span class="date"><%= created.strftime("%d") unless created.nil? %></span>
						<br />
						<span class="year"><%= created.strftime("%Y") unless created.nil? %></span>
					</div>
					<div class="updatePost560">
						<h4><a href="/posts/<%= m.id%>"><%= m.title%></a></h4>
						<p>
							<%= truncate(m.body,:length=>100,:separator=>' ')%> <a href="/posts/<%= m.id%>">READ MORE</a>
						</p>
						<p class="meta">
							Projects: Project Name | Posted by: <%= creator%>
						</p>
					</div>
					<div class="clearfix"></div>
				</div>
				<%end%>
				
				<div class="updateNavRight">
					<a href="/posts/">View All Posts &raquo;</a>
				</div>
				<%end%>
			</div>
		</div>
		<div id="contentRight300">

			<div class="contentRightWrapper">
			<h3><span class="eyebrow">Learn More About</span><br />Our Reach</h3>
						<div id="divImgThumbs">
				<div id="gallery" class="ad-gallery">
					<div class="ad-image-wrapper">
						<div class="ad-image shadow"></div>
					</div><!--wrapper-->
					<div class="ad-controls"></div><!--controls-->
					<div class="ad-nav">
						<div class="ad-back"></div>
						<div class="ad-thumbs">
							&nbsp;
							<ul class="ad-thumb-list">
								<% if @assets.count > 0
								@counter = 0
								@assets.each do |photo|
								@classname = "image" + @counter.to_s
								%>
								<!--<p><%= image_tag photo.asset.url(:medium) %></p>-->
								<li >
									<a href="<%= photo.asset.url(:medium)%>"><img src="<%= photo.asset.url(:thumb) %>" alt="" title="" longdesc="" class="<%= @classname%>" style="width:65px;" /></a>
								</li>
								<% @counter = @counter + 1%>
								<% end %>
								<% end %>
							</ul>
						</div>
						<div class="ad-forward"></div>
					</div><!--adnav-->
				</div><!--gallery-->
		</div><!--thumbs-->
		</div><!--contentRightWrapper-->
		</div><!--contentRight-->
		<div class="clearfix"><!--x--></div>
	<% if @user.nil? %>
	<%= link_to 'Back', projects_path %>
	<% elsif @user.is_admin == 1%>
	<%= link_to 'Edit', edit_project_path(@project) %> |
	<%= link_to 'Back', projects_path %>
	<% else %>
	<%= link_to 'Back', projects_path %>
	<%end%>
	</div><!--content-->

