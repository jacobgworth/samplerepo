<div id="content" style="padding-top:370px;">
<div id="heroContent">
		<h1 style="padding-top:40px;">
			<span class="giantText1"><%= @project.projectname %><br /></span>
			<span class="largeText5 greenTransBG"><%= @project.goal%></span>
			</h1>
			<div class="buttonSquareOrange" style="position:absolute; top:-200px; left:100px; width:280px"><a href="">Support this project &raquo;</a></div>
		<div class="percentComplete">
		Percent Complete
		</div>
	</div>
	<div class="contentHeader">
		<div class="contentHeaderLeft">
			<h1><%= @project.projectname %></h1>
		<p><%= simple_format(@project.description) %></p>
		</div>
		<div class="contentHeaderRight">
			<h3 class="projectDetailButton">Project Type<br /><span class="darkGreenLarge"><%=@category.categoryname%></span></h3>
			<h3 class="projectDetailButton">Population Served<br /><span class="darkGreen">10000</span></h3>
			<h3 class="projectDetailButton">Project Stage<br /><span class="darkGreen"><%=@project.stage%></span></h3>
			<h3>Funds Raised</h3>
			<%= number_to_currency(@project.fundsraised, :unit => "$") %><%= ", " + number_to_percentage((@project.fundsraised/@project.fundsneeded)*100,:precision=>2) if !@project.fundsneeded.nil? && @project.fundsneeded > 0 %>
			
		</div>
	</div>
	
	<div id="contentLeft560">
		
			<div class="updatesWrapper">
			<h3><span class="eyebrow">Church Advancement</span><br />Blog Posts</h3>
				<div class="speechBubble"><p>latest<br />blog posts</p></div>
				<%@updates.each do |m|%>
					<div class="update560">
					<div class="updateDate">
						<% 
							created = m.created_at 
							creator = "-"
							if m.user.blank?
								creator = '-'
							else
								creator = m.user.first
							end
						%>
						<span class="month"><%= created.strftime("%b")%></span><br />
						<span class="date"><%=created.strftime("%d")%></span><br />
						<span class="year"><%=created.strftime("%Y")%></span>
					</div>
					<div class="updatePost560">
						<h4><a href=""><%=m.title%></a></h4>
						<p><%=truncate(m.body,:length=>100,:separator=>' ')%> <a href="/updates/<%=m.id%>">READ MORE</a></p>
						<p class="meta">Projects: Project Name | Posted by: <%=creator%></p>
					</div>
					<div class="clearfix"></div>
					</div>
				<%end%>
				<div class="updateNavRight"><a href="">View All Posts &raquo;</a></div>
			</div>
	</div>	
	<div id="divImgThumbs">
	<div id="gallery" class="ad-gallery">
		<div class="ad-image-wrapper">
			<div class="ad-image"></div>
		</div>
		<div class="ad-controls"></div>
		<div class="ad-nav">
